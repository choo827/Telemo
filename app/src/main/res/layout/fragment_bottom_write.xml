<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BottomWriteFragment">

    <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="16dp" android:id="@+id/expandBtn"
            android:src="@drawable/ic_close_drawer"
            android:background="#00ff0000" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>

    <ImageButton
            android:id="@+id/saveBtn"
            android:layout_width="24dp"
            android:layout_height="24dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:src="@drawable/ic_user_plus"
            android:background="#00ff0000" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            android:background="@drawable/bottom_nav_mid_corner"
            android:id="@+id/constraintLayout">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="전화번호"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:background="@null"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/name" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#fff" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/phoneNumber" app:layout_constraintBottom_toTopOf="@+id/name"
              android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="이름"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumber" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/etc" android:layout_marginBottom="16dp"/>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#fff" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintBottom_toTopOf="@+id/etc"
              android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="추가정보"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                android:id="@+id/etc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>